<Window x:Class="SpectraUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpectraUI"
        xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="0" Background="#FF2D2D30">
                <StackPanel DockPanel.Dock="Top">
                    <Button Content="Обои" Margin="10" Height="40" Command="{Binding NavigateCommand}" CommandParameter="WallpapersView"/>
                    <Button Content="Панель задач" Margin="10" Height="40" Command="{Binding NavigateCommand}" CommandParameter="TaskbarView"/>
                    <Button Content="Звуки" Margin="10" Height="40" Command="{Binding NavigateCommand}" CommandParameter="SoundsView"/>
                    <Button Content="Темы / Пресеты" Margin="10" Height="40" Command="{Binding NavigateCommand}" CommandParameter="ThemesView"/>
                </StackPanel>
                <StackPanel DockPanel.Dock="Bottom" Margin="10">
                    <Button Content="Личный кабинет" Height="40" Command="{Binding NavigateCommand}" CommandParameter="ProfileView"/>
                </StackPanel>
            </DockPanel>
            <ContentControl prism:RegionManager.RegionName="MainRegion" Grid.Column="1"/>
            <ContentControl prism:RegionManager.RegionName="ContentRegion" Grid.Column="1"/>
        </Grid>
</Window>
