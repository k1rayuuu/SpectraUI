<Window x:Class="SpectraUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpectraUI"
        xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d"
        Title="SpectraUI"
        Height="600"
        Width="850"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель окна -->
        <Border Grid.Row="0" Background="#191919" MouseDown="Border_MouseDown" CornerRadius="8, 8, 0, 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="Settings"
                        Style="{StaticResource Settings}"
                        Cursor="Hand"
                        Command="{Binding NavigateSettingsPageCommand}"
                        Margin="0,9,11,9"/>
                    <Button x:Name="MinimiseApp"
                        Style="{StaticResource MininizeApp}"
                        Margin="0,10,12,0"
                        Click="MinimiseApp_Click"
                        Cursor="Hand"/>
                    <Button x:Name="CloseApp"
                        Style="{StaticResource ExitApp}"
                        Click="CloseApp_Click"
                        Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
            <Border Grid.Row="1"
            Background="#0c0c0c"
            CornerRadius="0,0,8,8">
                <ContentControl prism:RegionManager.RegionName="ContentRegion"/>
            </Border>
    </Grid>
</Window>
