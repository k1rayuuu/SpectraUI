<Window x:Class="SpectraUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpectraUI"
        xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d"
        Height="600"
        Width="850"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="Transparent">
    <Grid>
        <Border Background="#62272d" MouseDown="Border_MouseDown" CornerRadius="32"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="86" />
                <ColumnDefinition Width="764" />
            </Grid.ColumnDefinitions>
        </Grid>
        <Grid HorizontalAlignment="Left" Width="86">
            <Border Background="#351518" CornerRadius="32,0,0,32"/>
            <StackPanel VerticalAlignment="Top" Margin="0, 24, 0, 234" Height="46" Width="46">
                <Image Source="/Images/SpectraUI-Logo.png" VerticalAlignment="Center" Height="46" Width="46"></Image>
            </StackPanel>
            <StackPanel Margin="0,86,0,234" Height="280" Width="86">
                <RadioButton Command="{Binding NavigateHomeCommand}" Style="{StaticResource Btn_Style}">
                    <Grid Margin="0,0,0,0">
                        <Image Source="Images/home-btn.png" Style="{StaticResource Image_Style}" />
                    </Grid>
                </RadioButton>
                <RadioButton Command="{Binding NavigateWallpaperCommand}" Style="{StaticResource Btn_Style}">
                    <Grid Margin="0,0,0,0">
                        <Image Source="/Images/wallpaper-btn.png" Style="{StaticResource Image_Style}" />
                    </Grid>
                </RadioButton>
                <RadioButton Command="{Binding NavigateTaskBarCommand}" Style="{StaticResource Btn_Style}">
                    <Grid Margin="0,0,0,0">
                        <Image Source="Images/icons-btn.png" Style="{StaticResource Image_Style}" />
                    </Grid>
                </RadioButton>
                <RadioButton Command="{Binding NavigateSoundsCommand}" Style="{StaticResource Btn_Style}">
                    <Grid Margin="0,0,0,0">
                        <Image Source="/Images/sound-btn.png" Style="{StaticResource Image_Style}" />
                    </Grid>
                </RadioButton>
                <RadioButton Command="{Binding NavigateSharePageCommand}" Style="{StaticResource Btn_Style}">
                    <Grid Margin="0,0,0,0">
                        <Image Source="/Images/settings-btn.png" Style="{StaticResource Image_Style}"/>
                    </Grid>
                </RadioButton>
            </StackPanel>
            <StackPanel Margin="0, 512, 0, 0" Height="60" Width="86">
                <RadioButton Command="{Binding NavigateUserPageCommand}" Style="{StaticResource Btn_Style}">
                    <Grid Margin="0,0,0,0">
                        <Image Source="/Images/userpage-btn.png" Style="{StaticResource Image_Style}" />
                    </Grid>
                </RadioButton>
            </StackPanel>
        </Grid>
        <Grid Width="764" Height="540" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <ContentControl Grid.Column="1" prism:RegionManager.RegionName="ContentRegion"/>
        </Grid>
        <Button x:Name="CloseApp"
        Style="{StaticResource ExitApp}"
        Click="CloseApp_Click" />
    </Grid>
</Window>
