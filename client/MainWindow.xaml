<Window x:Class="SpectraUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpectraUI"
        xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d"
        Title="SpectraUI"
        Height="600"
        Width="850"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="86" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border Grid.ColumnSpan="2" Background="#62272d" MouseDown="Border_MouseDown" CornerRadius="32"/>
        <Grid HorizontalAlignment="Left" Width="86">
            <Border Background="#351518" CornerRadius="32,0,0,32"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="86"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Image Source="/Images/SpectraUI-Logo.png" VerticalAlignment="Center" Height="40" Width="40" ></Image>
                <RadioButton  Grid.Row="1" Command="{Binding NavigateHomeCommand}" Style="{StaticResource Btn_Style}">
                        <Image Source="Images/home-btn.png" Style="{StaticResource Image_Style}" />
                </RadioButton>
                <RadioButton Grid.Row="2" Command="{Binding NavigateWallpaperCommand}" Style="{StaticResource Btn_Style}">
                        <Image Source="/Images/wallpaper-btn.png" Style="{StaticResource Image_Style}" />
                </RadioButton>
                <RadioButton  Grid.Row="3" Command="{Binding NavigateTaskBarCommand}" Style="{StaticResource Btn_Style}">
                        <Image Source="Images/icons-btn.png" Style="{StaticResource Image_Style}" />
                </RadioButton>
                <RadioButton Grid.Row="4" Command="{Binding NavigateSoundsCommand}" Style="{StaticResource Btn_Style}">
                        <Image Source="/Images/sound-btn.png" Style="{StaticResource Image_Style}" />
                </RadioButton>
                <RadioButton Grid.Row="5" Command="{Binding NavigateSharePageCommand}" Style="{StaticResource Btn_Style}">
                        <Image Source="/Images/settings-btn.png" Style="{StaticResource Image_Style}"/>
                </RadioButton>
                <RadioButton Grid.Row="7" Command="{Binding NavigateUserPageCommand}" Style="{StaticResource Btn_Style}" Margin="0,0,0,16">
                        <Image Source="/Images/userpage-btn.png" Style="{StaticResource Image_Style}" />
                </RadioButton>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="64"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="MinimiseApp" Style="{StaticResource ExitApp}" Click="MinimiseApp_Click" />
                <Button x:Name="CloseApp" Style="{StaticResource ExitApp}" Click="CloseApp_Click" />
            </StackPanel>
                <ContentControl Grid.Row="1" prism:RegionManager.RegionName="ContentRegion"/>
        </Grid>
    </Grid>
</Window>
